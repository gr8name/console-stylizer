{
  "opts": {
    "destination": "docs",
    "recurse"    : true
  },
  "plugins": [
    "plugins/markdown"
  ],
  "source": {
    "include": ["dist"],
    "includePattern": ".+\\.(j|t)s(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "templates": {
    "cleverLinks"   : false,
    "monospaceLinks": false
  }
}
