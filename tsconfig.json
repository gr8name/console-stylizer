{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*"
  ],
  "lib": [
    "es6"
  ],
  "presets": [
    [
      "env",
      {
        "modules": false
      }
    ]
  ]
}
