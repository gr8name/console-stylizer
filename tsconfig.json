  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ],
  "target": "ES5",
  "module": "commonjs"
}
