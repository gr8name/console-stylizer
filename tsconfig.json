{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*"
  ],
  "lib": [
    "es2016",
    "dom",
    "es5"
  ],
  "presets": [
    [
      "env",
      {
        "modules": false
      }
    ]
  ]
}
